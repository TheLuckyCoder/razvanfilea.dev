---
import { NavBarButton, SocialMediaButton } from "./NavBarButtons";
import { Sprite } from "astro-icon";
---

<nav class="w-full py-6 md:py-3 flex flex-row items-center px-2 sm:px-4 md:px-8 backdrop-blur-md z-1">
    <div class="flex-none p-3 rounded-lg bg-primary bg-opacity-0 hover:bg-opacity-40 max-md:hidden">
        <img
            src="./logo.png"
            width="24"
            height="24"
            alt="Logo"
        />
    </div>

    <div class="flex-grow" />

    <div class="flex-none">
        <NavBarButton content={"About"} link={"./#About"} />
        <NavBarButton content={"Projects"} link={"./#Projects"} />
        <NavBarButton content={"Contact"} link={"./#Contact"} />
    </div>

    <div class="flex-none">
        <SocialMediaButton link="https://github.com/TheLuckyCoder">
            <Sprite
                className={"inline"}
                name="mdi:github"
                size={24}
                color="#00b0ff"
                title="GitHub"
            />
        </SocialMediaButton>
    </div>

    <div class="flex-none">
        <SocialMediaButton link="https://twitter.com/TheLuckyCoder">
            <Sprite
                className={"inline"}
                name="mdi:twitter"
                size={24}
                color="#00b0ff"
                title="Twitter"
            />
        </SocialMediaButton>
    </div>

    <div class="flex-none">
        <SocialMediaButton link="https://www.linkedin.com/in/r%C4%83zvan-f-801194163/">
            <Sprite
                className={"inline"}
                name="mdi:linkedin"
                size={24}
                color="#00b0ff"
                title="LinkedIn"
            />
        </SocialMediaButton>
    </div>
</nav>
