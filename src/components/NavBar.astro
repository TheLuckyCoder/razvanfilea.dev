---
import { NavBarButton, SocialMediaButton } from "./NavBarButtons";
import { Sprite } from "astro-icon";
---

<nav class="py-3 flex flex-row items-center md:px-5 mx-7">
    <div class="flex-none p-3 rounded-lg bg-primary bg-opacity-0 hover:bg-opacity-40">
        <img
            src="/logo.png"
            width="24"
            height="24"
            class=""
        />
    </div>

    <div class="flex-grow"></div>

    <div class="flex-none">
        <NavBarButton content={"About"} link={"./#About"} />
        <NavBarButton content={"Projects"} link={"./#About"} />
        <NavBarButton content={"Contact"} link={"./#About"} />
    </div>

    <div class="flex-none">
        <SocialMediaButton link="https://twitter.com/TheLuckyCoder">
            <Sprite
                className={"inline"}
                name="mdi:twitter"
                size={24}
                color="#00b0ff"
            />
        </SocialMediaButton>
    </div>

    <div class="flex-none">
        <SocialMediaButton link="https://github.com/TheLuckyCoder">
            <Sprite
                className={"inline"}
                name="mdi:github"
                size={24}
                color="#00b0ff"
            />
        </SocialMediaButton>
    </div>

    <div class="flex-none">
        <SocialMediaButton link="https://github.com/TheLuckyCoder">
            <Sprite
                className={"inline"}
                name="mdi:linkedin"
                size={24}
                color="#00b0ff"
            />
        </SocialMediaButton>
    </div>
</nav>
